        <menu-card title = "Ñoquis" 
          descripcion = "Ñoquis con salsa a la boloñesa"
          image = 'https://cdn.elcocinerocasero.com/imagen/receta/1000/2016-05-26-18-07-22/noquis-con-salsa-bolonesa.jpeg'></menu-card>
      </div>
      
      <h2 id = "pizzasShow" onclick = "hideShow('pizzas')">Pizzas</h2>
      <div id = "pizzas"> 
        <menu-card title = 'Barbacoa'
          descripcion = "Pollo, bacon, carne molida y salsa barbacoa"
          image= "https://okdiario.com/img/2015/09/08/receta-pizza-barbacoa-655x368.jpg"></menu-card>
        <menu-card title= 'Carbonara' 
          descripcion = "Bacon, huevo, nata y champiñones"
          image= 'https://images.hola.com/imagenes/cocina/recetas/20200120158507/pizza-carbonara-con-huevo/0-770-845/pizza-carbonara-con-huevo-t.jpg'></menu-card>
        <menu-card title= 'Marinera' 
          descripcion = "Atun y gambas"
          image= 'https://i.pinimg.com/originals/dc/aa/c2/dcaac2b0e856eb586932c0c0c5cc94e9.jpg'></menu-card>
        <menu-card title= '4 quesos' 
          descripcion = "Queso mozarela, gorgonzola, fontina y parmesano"
          image= 'https://recetinas.com/wp-content/uploads/2018/04/pizza-cuatro-quesos.jpg'></menu-card>
      </div>
      
      <h2 id = "postresShow" onclick = "hideShow('postres')">Postres</h2>
      <div id = "postres"> 
        <menu-card title = 'Coulant de chocolate'
          descripcion = "Con helado de vainilla"
          image= "https://wakame-ibiza.com/wp-content/uploads/2022/05/coulant.jpg"></menu-card>
        <menu-card title= 'Tarta de manzana' 
          descripcion = "Con helado de vainilla"
          image= 'https://placeralplato.com/files/2018/10/Receta-de-tarta-de-manzana-con-helado-de-vainilla-y-salsa-caramelo.jpg'></menu-card>
        <menu-card title= 'Tres leches' 
          descripcion = "Con nata"
          image= 'https://cuk-it.com/wp-content/uploads/2022/05/thumb03-1024x576.jpg'></menu-card>
        <menu-card title= 'Brownie' 
          descripcion = "Con helado de vainilla"
          image= 'https://es.rc-cdn.community.thermomix.com/recipeimage/mefmdfat-fed33-856901-cfcd2-zjmzyp14/e9bc33a4-b95f-4cf3-b6a2-3730c1881abf/main/brownie-de-chocolate-con-helado-de-vanilla.jpg'></menu-card>
      </div>

    </div>

    <script>
      showInfo = false;
      document.getElementById('entrantes').style.display = 'none';
      document.getElementById('pastas').style.display = 'none';
      document.getElementById('pizzas').style.display = 'none';
      document.getElementById('postres').style.display = 'none';

